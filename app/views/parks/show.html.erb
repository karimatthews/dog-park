<!-- Parks View -->
<div class="contents">

  <p id="notice"><%= notice %></p>

  <div style='display: flex'>
    <h1>
      <%= @park.name %>
    </h1>

    <span style='margin-top: 65px;'>
      (<%= link_to 'Edit', edit_park_path(@park) %> |
      <%= link_to 'Remove', @park, method: :delete, data: { confirm: 'Are you sure?' } %>)
    </span>
  </div>

  <div>
    <strong>Address:</strong>
    <%= @park.address %>
    <br>
    <br>

    <!-- <strong>Is there an off-lead area?</strong> -->
    <%=
    if @park.offlead ==1
      "There is an off-lead area."
    else
      "There is no off-lead area."
    end
    %>
    <br><br>
    <!-- <strong>Is the park fully fenced?</strong> -->
    <%=
    if @park.fence == 1
      "The park is fully-fenced."
    else
      "The park is not fully fenced."
    end
    %>
    <br>
    <br>
    <!-- <strong>Are doggy bags provided?</strong> -->
    <%=
      if @park.bag == 1
        "Dog bags are provided."
      else
        "No dog bags provided."
      end
    %>
    <br>
    <br>
  </div>

  <br>
  <br>


  <div class = 'display-cards'>
    <% @park.dogs.each do |dog| %>
      <%= link_to dog do %>
        <div class='card'>
              <p style='font-size: 30px; text-align: center; padding: 0;'>
                <%= dog.name %>
              </p>
        </div>
      <% end %>
    <% end %>

    <div class='card add-button'>
      <%= form_tag(controller: "parks", action: "add_dog", method: "post") do %>
        <div class="field" style='font-size: 30px; text-align: center; padding: 0;'>
          <%= select_tag :dog_name, options_for_select((@user.dogs - @park.dogs).collect{ |dog|
            [dog.name, dog.name]
            }) %>
          <p id="error"><%= flash[:error] %></p>
        </div>
        <div style='font-size: 30px; text-align: center; padding: 0;'>
          <%= submit_tag "Add Dog" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
