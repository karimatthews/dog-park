<!-- View for User Profile -->

<div class='contents'>

  <h1><%= @user.name %></h1>

  <h3>My dogs:</h3>

  <div class = 'display-cards'>
    <% @user.dogs.each do |dog| %>
      <%= link_to dog do %>
        <div class='card'>
              <p style='font-size: 30px; text-align: center; padding: 0;'>
                <%= dog.name %>
              </p>
        </div>
      <% end %>
    <% end %>

    <%= link_to (new_dog_path) do %>
      <div class='card'>
        <p style ='font-size:80px; font-weight: 100; margin: 0; line-height:80px; width: 300px; text-align: center;'>
          +
        </p>
      </div>
    <% end %>
  </div>


  <h3>My favourite parks:</h3>

  <div class = 'display-cards'>
    <% @user.parks.each do |park| %>
      <%= link_to park do %>
        <div class='card'>
              <span style='font-size: 30px;'>
                <%= park.name %>
              </span>
          <br><br>
          <%= park.address %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
